@model WoWDashboard.Models.Character

@{
    ViewData["Title"] = "Delete Character";
}

<div class="container mt-4 fade-in slide-up" style="background-color: #1e1e2f; color: #d1d1e0; border-radius: 10px; padding: 20px;">
    <h2>Are you sure you want to delete this character?</h2>

    <div>
        <h4>@Model.Name (@Model.Realm)</h4>
        <p><strong>Class:</strong> @Model.CharacterClass</p>
        <p><strong>Level:</strong> @Model.Level</p>
        <p><strong>Guild:</strong> @Model.Guild</p>
    </div>
    @if (!string.IsNullOrEmpty(Model.AvatarUrl))
    {
        <img src="@Model.AvatarUrl" alt="Character Avatar" class="img-fluid rounded-circle mb-3" style="max-width: 250px; max-height: 250px; border-radius: 10px;" />
    }
    <div class="mt-4 d-flex justify-content-between">
        <form asp-action="DeleteConfirmed" method="post" class="d-inline">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
        </form>

        <a asp-action="SavedCharacters" class="btn btn-secondary">Cancel</a>
    </div>
</div>
