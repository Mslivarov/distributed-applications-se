@model WoWDashboard.Models.Character

@{
    ViewData["Title"] = "Search Character";
}

<div class="container mt-5 fade-in slide-up" style="max-width: 600px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center flex-grow-1" id="title" style="color: #d1d1e0;">Search WoW Character</h2>

        <div class="d-flex align-items-center ms-3 gap-2">
            <label class="switch">
                <input type="checkbox" id="theme-toggle" onchange="toggleTheme()">
                <span class="slider round"></span>
            </label>

            <form asp-action="Logout" asp-controller="Login" method="post" class="m-0">               
                <button type="submit" class="btn btn-outline-danger btn-sm btn-animate">Logout</button>
            </form>
        </div>
    </div>

    <form method="post" asp-action="Details" class="p-4 rounded" id="search-form" style="background-color: #1e1e2f; color: #d1d1e0;">
        <div class="mb-3">
            <label class="form-label">Character Name:</label>
            <input type="text" name="name" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Realm:</label>
            <input type="text" name="realm" class="form-control" required />
        </div>
        <div class="mb-4">
            <label class="form-label">Region:</label>
            <select name="region" class="form-select" required>
                <option value="us">US</option>
                <option value="eu">EU</option>
                <option value="kr">KR</option>
                <option value="tw">TW</option>
                <option value="cn">CN</option>
            </select>
        </div>
        <div class="text-center d-flex justify-content-center gap-3">
            <button type="submit" class="btn btn-primary px-4 btn-animate">Search</button>
            <a asp-action="SavedCharacters" asp-controller="Character" class="btn btn-secondary px-4 btn-animate">Saved Characters</a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function toggleTheme() {
            const form = document.getElementById('search-form');
            const title = document.getElementById('title');
            const toggle = document.getElementById('theme-toggle');

            if (toggle.checked) {
                form.style.backgroundColor = '#ffffff';
                form.style.color = '#000000';
                title.style.color = '#000000';
                document.body.style.backgroundColor = '#f5f5f5';
            } else {
                form.style.backgroundColor = '#1e1e2f';
                form.style.color = '#d1d1e0';
                title.style.color = '#d1d1e0';
                document.body.style.backgroundColor = '#121212';
            }
        }
    </script>
}
