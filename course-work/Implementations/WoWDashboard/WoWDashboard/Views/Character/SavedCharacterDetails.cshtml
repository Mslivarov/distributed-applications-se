@model WoWDashboard.Models.Character

@{
    ViewData["Title"] = "Character Details";
}

<div class="container mt-4" style="background-color: #1e1e2f; color: #d1d1e0; border-radius: 10px; padding: 20px;">
    <h2 class="mb-4">Character Details</h2>

    <div>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Realm:</strong> @Model.Realm</p>
        <p><strong>Class:</strong> @Model.CharacterClass</p>
        <p><strong>Level:</strong> @Model.Level</p>
        <p><strong>Guild:</strong> @Model.Guild</p>
        <p><strong>Raider.IO Score:</strong> @Model.RaiderIoScore</p>

        <h3>Equipped Items</h3>
        @if (Model.GearItems != null && Model.GearItems.Any())
        {
            <table class="table table-striped table-bordered" style="background-color: #2b2b3d; color: #d1d1e0;">
                <thead>
                    <tr>
                        <th>Slot</th>
                        <th>Item Name</th>
                        <th>Item Level</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.GearItems)
                    {
                        <tr>
                            <td>@item.Slot</td>
                            <td>@item.Name</td>
                            <td>@item.ItemLevel</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No items equipped.</p>
        }
    </div>

    <div>
        <a href="@Url.Action("SavedCharacters", "Character")" class="btn btn-secondary">Back to Saved Characters</a>
    </div>
</div>
